{% extends 'base.html.twig' %}

{% block body %}
   <div class="well">
       <h2>Welcome to this news app!</h2>
        <p>This app can show you the following feeds:</p>
        <div class="row equal">
        {%  for feed in feed_list %}
           <div class="col-md-3">
               <div class="panel panel-default text-center" style="min-height: 100px;">
                   <span class="lead">{{ feed.title }}</span> <br>
                   {{ feed.description }}
               </div>
           </div>
        {% endfor %}
        </div>
   </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
