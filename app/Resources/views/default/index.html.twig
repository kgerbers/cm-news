{% extends 'base.html.twig' %}

{% block body %}
   <div class="well">
       <h2>Welcome to this news app!</h2>
        <p>This app can show you the following feeds:</p>
        <div class="row equal">
        {%  for feed in feed_list %}
           <div class="col-md-3">
               <div class="panel panel-default text-center" style="min-height: 150px;">
                   <div class="panel-body">
                       <span class="lead">{{ feed.title }}</span> <br>
                       <p>{{ feed.description }}</p>
                       <p><a href="{{ path('news', {'slug': feed.slug}) }}">Go to feed</a></p>
                   </div>
               </div>
           </div>
        {% endfor %}
        </div>
   </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
